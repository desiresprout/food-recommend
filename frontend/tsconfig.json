{
  "compilerOptions": {
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES2020", "DOM"],
    "jsx": "react",
    "module": "es6",
    "moduleResolution": "Node",
    "target": "es5",
    "strict": true,
    "resolveJsonModule": true,
    "typeRoots": ["src/typing", "./node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@lib/*": ["./src/lib/*"],
      "@typing/*": ["./src/typing/*"],
      "@sagas/*": ["./src/sagas/*"],
      "@reducers/*": ["./src/reducers/*"],
      "@asset/*": ["./src/asset/*"],
      "@pages/*": ["./src/pages/*"]
    }
  },
  "include": ["./src/**/*"]
}
